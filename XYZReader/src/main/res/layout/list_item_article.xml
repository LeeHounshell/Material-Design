<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.harlie.xyzreader.ui.DynamicHeightNetworkImageView
            style="@style/ImageTransition"
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/photo_placeholder" />

        <TextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_item_padding"
            android:paddingTop="@dimen/card_item_padding"
            android:paddingRight="@dimen/card_item_padding"
            android:paddingBottom="@dimen/card_title_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:maxLines="4" />

        <TextView
            style="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/article_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_item_padding"
            android:paddingRight="@dimen/card_item_padding"
            android:paddingBottom="@dimen/card_item_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/primary_text"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end" />

    </LinearLayout>

</android.support.v7.widget.CardView>
